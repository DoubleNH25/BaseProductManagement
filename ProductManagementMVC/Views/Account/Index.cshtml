@model IEnumerable<BusinessObjects.AccountMember>
@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<h2>Quản lý tài khoản</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo tài khoản mới</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Họ và tên</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MemberId</td>
                <td>@item.FullName</td>
                <td>@item.EmailAddress</td>
                <td>
                    @if (item.MemberRole == 1)
                    {
                        <span class="badge bg-primary">Admin</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">User</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MemberId" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MemberId" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table> 