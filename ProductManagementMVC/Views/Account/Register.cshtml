@model BusinessObjects.AccountMember
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Đăng ký tài khoản</h3>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="FullName" class="form-label">Họ và tên</label>
                        <input asp-for="FullName" class="form-control" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="EmailAddress" class="form-label">Email</label>
                        <input asp-for="EmailAddress" type="email" class="form-control" required />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="MemberPassword" class="form-label">Mật khẩu</label>
                        <input asp-for="MemberPassword" type="password" class="form-control" required />
                        <span asp-validation-for="MemberPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Đăng ký</button>
                        <a asp-action="Login" class="btn btn-secondary">Quay lại đăng nhập</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 