@model BusinessObjects.AccountMember
@{
    ViewData["Title"] = "Sửa tài khoản";
}

<h2>Sửa tài khoản</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MemberId" />
            
            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label">Họ và tên</label>
                <input asp-for="FullName" class="form-control" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="EmailAddress" class="form-label">Email</label>
                <input asp-for="EmailAddress" type="email" class="form-control" required />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="MemberPassword" class="form-label">Mật khẩu</label>
                <input asp-for="MemberPassword" type="password" class="form-control" required />
                <span asp-validation-for="MemberPassword" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="MemberRole" class="form-label">Vai trò</label>
                <select asp-for="MemberRole" class="form-control">
                    <option value="1">Admin</option>
                    <option value="2">User</option>
                </select>
                <span asp-validation-for="MemberRole" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div> 