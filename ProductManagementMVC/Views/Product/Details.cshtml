@model BusinessObjects.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h2>Chi tiết sản phẩm</h2>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">ID:</dt>
            <dd class="col-sm-8">@Model.ProductId</dd>
            
            <dt class="col-sm-4">Tên sản phẩm:</dt>
            <dd class="col-sm-8">@Model.ProductName</dd>
            
            <dt class="col-sm-4">Danh mục:</dt>
            <dd class="col-sm-8">@Model.Category?.CategoryName</dd>
            
            <dt class="col-sm-4">Số lượng tồn:</dt>
            <dd class="col-sm-8">@Model.UnitsInStock</dd>
            
            <dt class="col-sm-4">Đơn giá:</dt>
            <dd class="col-sm-8">@Model.UnitPrice.ToString("N0") VNĐ</dd>
        </dl>
        
        <div>
            <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">Sửa</a>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div> 