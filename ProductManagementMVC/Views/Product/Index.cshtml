@model IEnumerable<BusinessObjects.Product>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<h2>Danh sách sản phẩm</h2>

@if (ViewBag.IsAdmin)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Tạo sản phẩm mới</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên sản phẩm</th>
            <th>Danh mục</th>
            <th>Số lượng tồn</th>
            <th>Đơn giá</th>
            @if (ViewBag.IsAdmin)
            {
                <th>Thao tác</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>@item.Category?.CategoryName</td>
                <td>@item.UnitsInStock</td>
                <td>@item.UnitPrice.ToString("N0") VNĐ</td>
                @if (ViewBag.IsAdmin)
                {
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table> 