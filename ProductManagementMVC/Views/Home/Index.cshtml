@{
    ViewData["Title"] = "Trang chủ";
}

<div class="text-center">
    <h1 class="display-4">Chào mừng đến với hệ thống quản lý sản phẩm</h1>
    <p class="lead">Xin chào, @ViewBag.CurrentUser.FullName!</p>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Sản phẩm</h5>
                <p class="card-text">Quản lý danh sách sản phẩm</p>
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Xem sản phẩm</a>
            </div>
        </div>
    </div>
    
    @if (ViewBag.IsAdmin)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Danh mục</h5>
                    <p class="card-text">Quản lý danh mục sản phẩm</p>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-success">Quản lý danh mục</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Tài khoản</h5>
                    <p class="card-text">Quản lý tài khoản người dùng</p>
                    <a asp-controller="Account" asp-action="Index" class="btn btn-info">Quản lý tài khoản</a>
                </div>
            </div>
        </div>
    }
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5>Thông tin tài khoản</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Họ và tên:</dt>
                    <dd class="col-sm-9">@ViewBag.CurrentUser.FullName</dd>
                    
                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@ViewBag.CurrentUser.EmailAddress</dd>
                    
                    <dt class="col-sm-3">Vai trò:</dt>
                    <dd class="col-sm-9">
                        @if (ViewBag.CurrentUser.MemberRole == 1)
                        {
                            <span class="badge bg-primary">Admin</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">User</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
